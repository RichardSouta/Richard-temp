{block content}         
{if $user->identity->id==$presenter->getParameter("id")}
<nav class="navbar navbar-inverse navbar-static-top" id="submenu">
  <div class="container-fluid">
  </div>
  <a href="{link User:edit,$presenter->getParameter("id")}">Upravit profil</a>
  <div class="navbar-right">
<a n:href="Collectible:new"><span style="color:white;">Přidat nový předmět</span></a>&nbsp;&nbsp;
</div>
</nav>
  
  {/if}
  


  <div id="profil">
  <h1>{$uzivatel->username}</h1>
  <center><img src="{$uzivatel->picture}" class="img-responsive img-rounded"></center>
 {if (($user->isLoggedIn()))}<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#zpravaModal"><span class="glyphicon glyphicon-envelope"></span> Poslat zprávu</button>{/if}
  <p><div class="col-xs-12">{$uzivatel->description}</div>
  </div>
         <div class="container-fluid">
          <div class="row">
           <div class="col-xs-12">
          {foreach $collectibles as $collectible}
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3" id="galerie">
              <div class="polozka">
                <div class="polozka_head">
                <center><h3>{$collectible->name}</h3></center>
                  <a href="{link Collectible:,$collectible->collectible_id}"><img class="img-responsive" src="{$collectible->picture}" title="{$collectible->description}"></a>
                </div>
                <div class="polozka_body">
                  {ifset $collectible->category}<center>Kategorie: {$collectible->category}</center>{/ifset}
                </div>                
              </div>
            </div>
            {/foreach}       
           </div>
          </div>
        </div>
        
        <!-- Modal -->
<div class="modal fade" id="zpravaModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Poslat zprávu uživateli {$uzivatel->username}</h4>
      </div>
      <div class="modal-body">
        {control messageForm-$uzivatel->user_id}
      </div>
    </div>
  </div>
</div> 
{/block}